@using InplayBet.Web.Models
@using InplayBet.Web.Utilities
@model List<UserRankViewModel>
@{
    ViewBag.Title = "Member Search";
}
@section PageScript{
    @Html.RenderScripts("~/Scripts/Ranking")
    @Html.RenderScripts("~/Scripts/RangeSlider")
}
@section PageStyle{
    @Html.RenderStyles("~/Styles/Ranking")
    @if (CommonUtility.fBrowserIsMobile())
    {
        @Html.RenderStyles("~/Styles/RangeSliderMobile")
    }
    else
    {
        @Html.RenderStyles("~/Styles/RangeSliderWeb")
    }
}
@{Html.RenderPartial("_PageTitle", new ViewDataDictionary { { "Caption", "Member Search" } });}
<div class="main-container">
    <div class="container">
        <div class="left-panel">
            <h2 class="left-heading">member search</h2>
            <p>Member name:</p>
            <input id="UserIdSearch" value="" name="" type="text">

            <ul class="search-filter">
                <li><a href="javascript:SearchMember(1,'')">Simple Search</a></li>
                <li><a href="javascript:SearchMember(1,'MemberSince')">Date Joined</a></li>
                <li><a href="javascript:SearchMember(1,'Rank')">Ranking</a></li>
                <li><a href="javascript:SearchMember(1,'Wins')">Wins</a></li>
                <li><a href="javascript:SearchMember(1,'Losses')">Losses</a></li>
                <li><a href="javascript:SearchMember(1,'BetWins')">Winning Bets</a></li>
                <li><a href="javascript:SearchMember(1,'Profit')">Highest Profit</a></li>
                <li><a href="javascript:SearchMember(1,'BookMakerName')">Bookmaker</a></li>
                <li><b>Bets Number Search</b></li>
                <li>
                    @Html.Hidden("maxBet", (int)ViewBag.MaxBet)
                    @Html.TextBox("betRange", "")
                </li>
            </ul>
        </div>
        <div class="right-block">
            @if (!Model.IsEmptyCollection())
            {
                @Html.Hidden("TotalRecord", (int)ViewBag.TotalRecord, new { id = "TotalRecord" })
                @Html.Hidden("PageSize", (int)ViewBag.PageSize, new { id = "PageSize" })
                @Html.Hidden("PagingUrl", (string)ViewBag.PagingUrl, new { id = "PagingUrl" })
                <div class="rank-pagger"></div>
                @Html.Partial("_UserRank", Model, new ViewDataDictionary { { "LastElement", 2 } })
                <div class="rank-pagger"></div>
            }
        </div>
        @{Html.RenderPartial("_PromoBanner");}
    </div>
</div>
